@using UdbService.Extension
@using UdbService.Utility 
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Material Design Bootstrap</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
    <!-- Bootstrap core CSS -->
    <link href="~/Customer/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="~/Customer/css/mdb.min.css" rel="stylesheet">
    <!-- Your custom styles (optional) -->
    <link href="~/Customer/css/style.min.css" rel="stylesheet">


</head>

<body>
    <!-- Navbar -->
    <nav class="navbar fixed-top navbar-expand-lg navbar-light white scrolling-navbar">
        <div class="container">

            <!-- Brand -->
            <a class="navbar-brand waves-effect" asp-area="Customer" asp-controller="Home" asp-action="Index" asp-route-id="0">
                <strong class="blue-text">UdbService</strong>
            </a>

            <!-- Collapse -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Links -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent">

                <!-- Left -->
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link waves-effect" asp-area="Customer" asp-controller="Home" asp-action="Index" asp-route-id="0">
                            Home
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link waves-effect" href="#" target="_blank">About UdbService</a>
                    </li>


                </ul>

                <!-- Right -->
                <ul class="navbar-nav nav-flex-icons">
                    @if (HttpContextAccessor.HttpContext.Session.GetObject<List<int>>(SD.SessionCart) != null)
                    {

        <li class="nav-item">
            <a asp-area="Customer" asp-controller="Cart" asp-action="Index" class="nav-link waves-effect">
                @{ var count = HttpContextAccessor.HttpContext.Session.GetObject<List<int>>(SD.SessionCart).Count;}
                <span class="badge red z-depth-1 mr-1"> (@count) </span>
                <i class="fas fa-shopping-cart"></i>
                <span class="clearfix d-none d-sm-inline-block"> Cart </span>
            </a>
        </li>
        @*<li style="color:white">
                <a asp-area="Customer" asp-controller="Cart" asp-action="Index" class="nav-link text-white">
                    @{ var count = HttpContextAccessor.HttpContext.Session.GetObject<List<int>>(SD.SessionCart).Count; }
                    <i class="fas fa-shopping-cart"></i>&nbsp; (@count)
                </a>
            </li>*@ }
    else
    {
<li class="nav-item">
    <a class="nav-link waves-effect">
        <span class="badge red z-depth-1 mr-1"> 0 </span>
        <i class="fas fa-shopping-cart"></i>
        <span class="clearfix d-none d-sm-inline-block"> Cart </span>
    </a>
</li>}

                    
                    <li class="nav-item">

                        <partial name="_LoginPartial" />

                    </li>
                </ul>

            </div>

        </div>
    </nav>
    <!-- Navbar -->
    <!--Body Goes Here-->
    <div>
        @RenderBody()
    </div>
    

    <!--Footer-->
    <footer class="page-footer text-center font-small mt-4 wow fadeIn">

        <a href="#" target="_blank">&copy udbservice.com </a>

    </footer>
    <!--/.Footer-->
    <!-- SCRIPTS -->
    <!-- JQuery -->
    <script type="text/javascript" src="~/Customer/js/jquery-3.4.1.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="~/Customer/js/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="~/Customer/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="~/Customer/js/mdb.min.js"></script>
    <script type="text/javascript" src="https://kit.fontawesome.com/2057e9b7ae.js"></script>

    <!-- Initializations -->
    <script type="text/javascript">
        // Animations initialization
        new WOW().init();
    </script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
