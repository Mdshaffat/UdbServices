@model UdbService.Models.ViewModels.HomeVM

@foreach (var category in Model.CategoryList)
{
    @if (Model.ServiceList.Where(c => c.CategoryId == category.Id).Count() > 0)
    {
        <div class="row container pb-3 backgroundWhite">
            <div class="col-12">
                <div class="row">
                    <h2 class="text-primary"><b>@category.Name</b></h2>

                    <div class="col-12">
                        <div class="row my-3">
                            @foreach (var service in Model.ServiceList.Where(c => c.CategoryId == category.Id))
                            {

                                <div class="col-lg-4 col-xl-3 col-md-6 pb-4">
                                    <div class="card border-primary">
                                        
                                        <div class="pl-3 pt-1 text-center">
                                            <h3 class="card-title text-dark"><b>@service.Name</b></h3>
                                        </div>
                                        <div class="d-flex justify-content-between ">
                                            <div class="pl-1 text-muted">Price per service</div>
                                            <div class="pr-1 text-danger h5">$@service.Price</div>
                                        </div>
                                        <img src="~/Images/services/@service.ImageName" class="card-img-top p-2 rounded" height="250" width="250" />


                                        <a asp-action="Details" class="btn btn-primary" style="border-radius:2px;" asp-route-id="@service.Id">Details</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
