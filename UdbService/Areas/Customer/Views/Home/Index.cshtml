</div>
<!--/.Carousel Wrapper-->
<!--Navbar-->
<main>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-dark mdb-color lighten-3 mt-3 mb-5">

            <!-- Navbar brand -->
            <span class="navbar-brand">Categories:</span>

            <!-- Collapse button -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#basicExampleNav"
                    aria-controls="basicExampleNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Collapsible content -->
            <div class="collapse navbar-collapse" id="basicExampleNav">

                <!-- Links -->
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-action="Index" asp-route-id="0">
                            All
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>


                @foreach (var category in Model.CategoryList)
                    {

                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-route-id="@category.Id">@category.Name</a>
                        </li>
                        
                        
                     }
                 </ul>
                                <!-- Links -->

                         <form class="form-inline">
                             <div class="md-form my-0">
                                 <input class="form-control mr-sm-2" placeholder="Search a service" type="text" asp-for="SearchString" />
                                 <input class="hoverable btn-outline-blue form-control mr-sm-2" type="submit" value="Search" />
                             </div>
                              
                         </form>
             </div>

                        </nav> <!--/.Navbar-->
        <!--Main layout-->




        <section class="text-center mb-4">
            <div class="row wow fadeIn">

                @foreach (var item in Model.ServiceList)
                {


                    <div class="col-lg-3 col-md-6 shadow-sm mb-5">

                        <!--Card-->

                        <div class="card">

                            <!--Card image-->
                            <div class="view overlay">
                                <img src="~/Images/services/@item.ImageName" asp-append-version="true" class="card-img-top " height="250" width="250"
                                     alt="">
                                <a>
                                    <div class="mask rgba-white-slight"></div>
                                </a>
                            </div>
                            <!--Card image-->
                            <!--Card content-->
                            <div class="card-body text-center">
                                <!--Category & Title-->
                                <a href="" class="grey-text">
                                    <h5>@Html.DisplayFor(modelItem => item.Category.Name)</h5>
                                </a>

                                <h5>
                                    <strong>
                                        <a href="" class="dark-grey-text">
                                            @Html.DisplayFor(modelItem => item.Name)
                                            @*<span class="badge badge-pill danger-color">NEW</span>*@
                                        </a>
                                    </strong>
                                </h5>

                                <h4 class="badge badge-pill danger-color ">
                                    <del> @((int)item.Price + (int)item.Price * 0.4) $ </del>
                                </h4>
                
                                <h4 class="font-weight-bold blue-text">
                                    <strong>@Html.DisplayFor(modelItem => item.Price) $</strong>
                                </h4>

                                <a asp-action="Details" class="btn btn-primary" style="border-radius:2px;" asp-route-id="@item.Id">Details</a>

                            </div>
                            <!--Card content-->

                        </div>

                    </div>
    }
            </div>
        </section>


    </div>
</main>
<!--Main layout-->
