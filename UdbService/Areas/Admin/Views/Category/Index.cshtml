@model IEnumerable<UdbService.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="row">
    <div class="col-8">
        <h1 class="text-info">Categories</h1>
    </div>
    <div class="col-4">
        <p>
            <a class="btn btn-primary" asp-action="Create"><i class="fa fa-plus"></i>&nbsp; Create a new category</a>
        </p>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>

                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fas fa-edit"></i></a>&nbsp;
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="fas fa-info"></i></a> &nbsp;
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-trash"></i></a>&nbsp;
            </td>
        </tr>
}
    </tbody>
</table>
